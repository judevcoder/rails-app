input#is_show_initial_sign_in_modal[type="hidden" value="#{@show_initial_sign_in_modal}"]
#md-welcome.modal.fade[tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static"]
    .modal-dialog.modal-extra-lg[role="document"]
        .modal-header
            
        .modal-body
            h3 Welcome to 1031fun.com
            p 
                | Is this account for a 
                a.business_modal[href='#'] business
                | &nbsp;or&nbsp;
                a.individual_modal[href='#'] individual?

#md-business.md-contact.modal.fade[tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static"]
    .modal-dialog.modal-extra-lg[role="document"]
        .modal-header
            
        .modal-body
            h3 Welcome to 1031fun.com
            h4 Business Setup
            form.create_contact
                input[type="hidden" name="contact_type" value="business"]
                div.form-group
                    label.form-label Please enter the name of your business:
                    div.row
                        div.col-md-2.col-xs-6
                            input.form-control[name="business_name" type="text" required]
                div.form-group
                    label.form-label Please enter the first and last name of the contact person for this business:
                    div.row
                        div.col-md-2.col-xs-6
                            input.form-control[name="business_contact_first_name" type="text" required]
                        div.col-md-2.col-xs-6
                            input.form-control[name="business_contact_last_name" type="text" required]
                button.btn.btn-danger Save

#md-individual.md-contact.modal.fade[tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static"]
