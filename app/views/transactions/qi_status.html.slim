.clearfix.margin-lg-left
  = render 'transactions/breadcrum'
- if params[:main_id]
  .clearfix.margin-lg-left
  = render 'transactions/header_link'
.col-lg-12.col-md-12.col-sm-12.col-xs-12.margin-lg-top
  .clearfix
  label Sales
  table#data_table
    thead
      tr
        th
            | Name
        th
            | Closing Date
        th
            | Closing Proceeds
    tbody
      - @sales.each do |sale|
        tr
          td
            = sale.property.title
          td
            = sale.closing_date
          td
            = number_to_currency(sale.closing_proceeds)

.col-lg-12.col-md-12.col-sm-12.col-xs-12.margin-lg-top
  .clearfix
  label Purchases
  table#data_table
    thead
      tr
        th
            | Name
        th
            | Closing Date
        th
            | Cost of Purchase
    tbody
      - @purchases.each do |purchase|
        tr
          td
            = purchase.property.title
          td
            = purchase.closing_date
          td
            = number_to_currency(purchase.closing_proceeds)

.col-lg-12.col-md-12.col-sm-12.col-xs-12.margin-lg-top
  .clearfix
  label QI Funds Balance
  h4
    = number_to_currency(@transaction_main.qi_funds)