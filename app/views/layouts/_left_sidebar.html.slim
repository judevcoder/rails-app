                = link_to 'Purchase', personnel_transaction_path(type: 'purchase', sub: 'personnel', main_id: params[:main_id], personnel_category: 'Survey'), class: "#{'active' if params[:type] == 'purchase' && params[:personnel_category] == 'Survey' && params[:sub] == 'personnel'}"
          
          li
