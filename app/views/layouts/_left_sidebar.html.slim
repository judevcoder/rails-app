                = link_to 'Sale', personnel_transaction_path(type: 'sale', sub: 'personnel', main_id: params[:main_id], personnel_category: 'Survey'), class: "#{'active' if params[:type] == 'sale' && params[:personnel_category] == 'Survey' && params[:sub] == 'personnel'}"
