                = link_to 'Purchase', personnel_transaction_path(type: 'purchase', sub: 'personnel', type: 'purchase', main_id: params[:main_id], personnel_category: 'Environmental'), class: "#{'active' if params[:type] == 'purchase' && params[:personnel_category] == 'Environmental' && params[:sub] == 'personnel'}"
          
          li
            = link_to 'Zoning <span class="sub-menu-expander lnr lnr-chevron-down"></span>'.html_safe, '#', class: ""
            ul.nav.child_menu[style="#{params[:personnel_category] == 'Zoning' ? 'display: block' : 'display: none'}"]
              li class=('active' if params[:type] == 'sale' && params[:personnel_category] == 'Zoning' && params[:sub] == 'personnel')
                = link_to 'Sale', personnel_transaction_path(type: 'sale', sub: 'personnel', main_id: params[:main_id], personnel_category: 'Zoning'), class: "#{'active' if params[:type] == 'sale' && params[:personnel_category] == 'Zoning' && params[:sub] == 'personnel'}"
              li class=('active' if params[:type] == 'purchase' && params[:personnel_category] == 'Zoning' && params[:sub] == 'personnel')
                = link_to 'Purchase', personnel_transaction_path(type: 'purchase', sub: 'personnel', main_id: params[:main_id], personnel_category: 'Zoning'), class: "#{'active' if params[:type] == 'purchase' && params[:personnel_category] == 'Zoning' && params[:sub] == 'personnel'}"
