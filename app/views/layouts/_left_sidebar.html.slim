            ul.nav.child_menu[style="#{params[:personnel_category] == 'Environmental' ? 'display: block' : 'display: none'}"]
              li class=('active' if params[:type] == 'sale' && params[:personnel_category] == 'Environmental' && params[:sub] == 'personnel')
                = link_to 'Sale', personnel_transaction_path(type: 'sale', sub: 'personnel', type: 'sale', main_id: params[:main_id], personnel_category: 'Environmental'), class: "#{'active' if params[:type] == 'sale' && params[:personnel_category] == 'Environmental' && params[:sub] == 'personnel'}"
