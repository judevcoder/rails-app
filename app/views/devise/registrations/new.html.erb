<div class="login-form-one">
  <h1 class="form-title">Sign up</h2>
  <h4 class="form-desc"></h4>  
  <div class="x_panel">
    <div class="x_content">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          
          <div class='form-group margin-lg-top'>
            <label>Email *</i></label>
            <%= f.email_field :email, :autofocus => true, class: 'form-control input-lg' %>
          </div>  
          <div class="form-group margin-lg-top">
            <label>Password *</label>
            <%= f.password_field :password, class: 'form-control input-lg' %>
          </div>
          <div class="form-group margin-lg-top">
            <label>Password Confirmation *</label>
            <%= f.password_field :password_confirmation, class: 'form-control input-lg' %>
          </div>

          <div class="form-group margin-lg-top">
            <label>Invite Code (optional)</label>
            <input type="text" name="" class="form-control input-lg">
          </div>
          
          <div class="form-group margin-lg-top">
            <%= f.submit "Sign up", class: 'btn btn-default btn-lg' %>
          </div>
      <% end %>

    </div>
  </div>
</div>