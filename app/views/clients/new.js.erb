<% if !@client.persisted? %>
  $("div#OwnershipFormNewEntity").find(".model-body").find(".OwnershipFormNewEntity").html("<%= j render(:partial => 'form') %>")
<%else%>
  $("div#OwnershipFormNewEntity").modal('hide')
  if ($('.entity_owner')[0].checked){
    $('#owner_entity_dropown_selection').html('<input autocomplete="off" id="property_owner_person_id" name="property[owner_person_id]" type="hidden">')
    $('#property_owner_person_id').val('<%= @client.id %>')
    $('#member_entity').val('<%= @client.name %>')
  }else{
    $('#owner_entity_dropown_selection').html('<input autocomplete="off" id="property_owner_entity_id" name="property[owner_person_id]" type="hidden">')
    $('#property_owner_entity_id').val('<%= @client.id %>')
    $('#member_entity').val('<%= @client.name %>') 	
  }
<%end%>